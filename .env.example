# TraceNet V3.0 Node Configuration

# Core
NODE_ENV=development
PORT=3000
PUBLIC_HOST=http://localhost:3000
NODE_ROLE=full # full | validator

# Security (Keystore)
KEYSTORE_PASSWORD=secure-password-change-me
# VALIDATOR_PRIVATE_KEY=... (REMOVED: Use Keystore)
# NODE_WALLET_PRIVATE_KEY=... (REMOVED: Use Keystore)

# JWT Auth
JWT_SECRET=super-secure-random-secret-key-min-32-chars

# P2P Network (Format: /ip4/IP/tcp/PORT/p2p/NODEID or simple URL)
PEERS=/ip4/104.1.2.3/tcp/3000/p2p/QmHash...,/ip4/104.1.2.4/tcp/3000

# Blockchain Parameters
BLOCK_TIME_MS=5000
MAX_TRANSACTIONS_PER_BLOCK=1000

# CORS (Production only)
CORS_ORIGIN=https://tracenet.app,https://explorer.tracenet.app
